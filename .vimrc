set nocompatible

set encoding=utf-8
set fenc=utf-8
set number
set expandtab
set ts=2
set list
set listchars=tab:>\ ,trail:~
set hlsearch
set laststatus=2
set ignorecase
set wrapscan
set showmatch
"set autoindent
set shiftwidth=2
set colorcolumn=80
set ambiwidth=double

set directory=~/.vim/tmp
set backupdir=~/.vim/tmp
set undodir=~/.vim/tmp
set clipboard=unnamed

filetype off
filetype plugin indent on
filetype indent on
syntax on

